$hackerRed = #2e86c1
$hackerGray = #9e9e9e

article
  .tags-cloud
    width 100%
    margin 8rem 0
    text-align center
    line-height 2rem

  .tags-cloud > spannot(last-child)
    margin-right 3rem

  .tags-cloud > span
    display inline-block

  .tags-cloud > span > span
    line-height 1
    vertical-align middle

  .archive-tags

  .archive-tags > spannot(last-child)
    margin-right 3rem

  .archive-tags > span
    display inline-block

  .archive-tags > span > span
    line-height 1
    vertical-align middle

  .archive-tags, .tags-cloud
    margin 8rem 0
    font-size 1.3rem
    color #9e9e9e

    a
      color $hackerGray
      &:hover
        color $hackerRed

    i
      vertical-align middle
      color #9e9e9e
      margin-right 0.5rem

    .post-tags
      margin-right 3rem

      a
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px

    .post-tag
      font-size 17px
      margin-bottom 1em
      margin-right 3rem

    .archive-post
      padding-left 60px
      font-size 13px
      margin-bottom 10px

      .archive-time
        float left
        width 110px
        text-align right
        color black

      .archive-title
        display block
        margin-left 10em

        a
          color $hackerRed
